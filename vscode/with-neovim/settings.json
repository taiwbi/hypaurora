{
  "antigravity.marketplaceGalleryItemURL": "https://marketplace.visualstudio.com/items",
  "antigravity.marketplaceExtensionGalleryServiceURL": "https://marketplace.visualstudio.com/_apis/public/gallery",

  // -> <- => <= == != <= >=
  "editor.fontFamily": "'FantasqueSansMono Nerd Font Mono', 'Vazir Code Hack'",
  "editor.fontLigatures": "'dlig', 'dlig', 'ss02'",
  "editor.fontWeight": "500",
  "editor.fontSize": 15,
  "editor.letterSpacing": 0,
  "editor.lineHeight": 29,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.lineNumbers": "relative",
  "editor.inlineSuggest.enabled": true,
  "editor.cursorSurroundingLines": 6,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.linkedEditing": true,
  "emmet.includeLanguages": {
    "blade": "html"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["keyword", "storage", "support", "constant"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  "search.smartCase": true,
  "explorer.confirmDelete": false,

  "terminal.integrated.fontFamily": "'FantasqueSansMono Nerd Font Mono', 'Vazir Code Hack', 'Symbols Nerd Font'",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "900",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.toggleSidebarVisibility",
    "workbench.action.toggleAuxiliaryBar",
    "multiCommand.hideall"
  ],
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  "workbench.editor.showTabs": "none",
  "workbench.preferredDarkColorTheme": "Neovim Theme",
  "workbench.preferredLightColorTheme": "Ros√© Pine Dawn",
  "workbench.iconTheme": "charmed-soft",
  "workbench.activityBar.location": "hidden",
  "workbench.list.smoothScrolling": true,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.startupEditor": "welcomePage",

  "breadcrumbs.enabled": false,

  "window.autoDetectColorScheme": true,
  "window.customMenuBarAltFocus": false,
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "window.restoreWindows": "none",
  "zenMode.showTabs": "single",

  "files.exclude": {
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.synctex.gz": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.toc": true
    // "**/_ide_helper*.php": true,
    // "**/.php-cs-fixer.cache": true,
    // "**/.phpstorm.meta.php": true,
    // "**/vendor/**": true,
    // "**/node_modules/**": true
  },

  "keyboard.dispatch": "keyCode",

  "git.autofetch": false,
  "git.openRepositoryInParentFolders": "never",

  "files.autoSave": "onWindowChange",
  "files.associations": {
    "**/ghostty/config": "editorconfig"
  },

  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  "database-client.autoSync": true,
  "diffEditor.renderSideBySide": false,
  "diffEditor.maxComputationTime": 0,
  "diffEditor.ignoreTrimWhitespace": false,

  "intelliphp.inlineSuggestionsEnabled": false,
  "php.codeActions.enabled": false,
  "php.highlight-todo.enable": false,
  "php.linkedEditing.variables": true,
  "laravel-pint.enable": true,

  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.margin": "6ch",
  "errorLens.messageTemplate": "$severity $message   $count",

  "latex-workshop.latex.outDir": "build",

  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  "json.schemaDownload.enable": true,

  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "text",
      "background": "#1d4d06",
      "foreground": "#dcdcdc"
    },
    "FIXME": {
      "icon": "check",
      "type": "text",
      "background": "#4d0f06",
      "foreground": "#dcdcdc"
    },
    "INFO": {
      "icon": "check",
      "type": "text",
      "background": "#064d46",
      "foreground": "#dcdcdc"
    }
  },

  "multiCommand.commands": [
    {
      "command": "multiCommand.hideall",
      "sequence": [
        "workbench.action.minimizeOtherEditorsHideSidebar",
        "workbench.action.closePanel"
      ]
    }
  ],

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[blade]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.documentSelectors": ["**/*.blade.php"],
  "[php]": {
    "editor.defaultFormatter": "open-southeners.laravel-pint"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.wordWrap": "on"
  },
  "latex-workshop.formatting.latex": "latexindent",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[markdown]": {
    // "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.wordWrap": "on"
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  /* Spell */
  "cSpell.ignoreRegExpList": ["/[\\u0600-\\u06FF]+/", "/[\\u0400-\\u04FF]+/"], // Ignore Russian and Persian Words
  // My Custom Dictionaries
  "cSpell.dictionaryDefinitions": [
    {
      "name": "user-english-words",
      "path": "/home/mahdi/Documents/dictionary-en.txt",
      "addWords": true
    }
  ],
  "cSpell.dictionaries": [
    "en",
    "fa",
    "typescript",
    "node",
    "php",
    "python",
    "rust",
    "css",
    "html",
    "user-english-words"
  ],
  "cSpell.enabledNotifications": {
    "Maximum Word Length Exceeded": false,
    "Lines too Long": false,
    "Average Word Length too Long": false
  }
}
