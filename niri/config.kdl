spawn-at-startup "sh" "-c" "swaybg --mode fill --image ~/.config/background"
spawn-at-startup "/usr/libexec/polkit-mate-authentication-agent-1"
spawn-at-startup "swayidle" "-C" "~/.config/niri/swayidle"
spawn-at-startup "waybar"
spawn-at-startup "/usr/libexec/polkit-mate-authentication-agent-1"

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

prefer-no-csd

environment {
    QT_QPA_PLATFORM "wayland"
    GDMSESSION "GNOME"
    XDG_SESSION_DESKTOP "GNOME"
    XDG_CURRENT_DESKTOP "GNOME"

    ELECTRON_OZONE_PLATFORM_HINT "auto"

    // systemctl --user enable --now gcr-ssh-agent.socket
    SSH_AUTH_SOCK "/run/user/1000/gcr/ssh"

    DISPLAY null
}

cursor {
    xcursor-theme "MacOS-Tahoe-Cursor"
    xcursor-size 32

    hide-when-typing
    hide-after-inactive-ms 5000
}

overview {
    zoom 0.5
    backdrop-color "#1F212B"

    workspace-shadow {
        // off
        softness 40
        spread 10
        offset x=0 y=10
        color "#00000050"
    }
}

input {
    disable-power-key-handling
    // Allow focus-follows-mouse when it results in scrolling at most 10% of the screen.
    focus-follows-mouse max-scroll-amount="40%"
    
    mod-key "Super"
    mod-key-nested "Alt"

    keyboard {
        xkb {
            layout "us,ir"
            options "caps:escape"
        }
        track-layout "window"
    }

    touchpad {
        accel-profile "flat"
        accel-speed 0.8
        scroll-factor 1.0
        scroll-method "two-finger"
        natural-scroll
        tap
        dwt // disable when typing
        drag true // tap and drag
        drag-lock
    }

    mouse {
        accel-profile "flat"
        accel-speed 0.8
        scroll-factor 1.0
    }
}

output "eDP-1" {
    // off
    mode "1920x1080@59.93"
    scale 1.0
    transform "normal"
    position x=0 y=0
    variable-refresh-rate // on-demand=true
    focus-at-startup
    background-color "#1e1e1e"
    backdrop-color "#1e1e1e"
    // variable-refresh-rate
}

binds {
   Mod+Shift+M { quit; }

    Mod+Return { spawn "ghostty" "--gtk-titlebar=false"; }
    Mod+backslash { spawn "~/Documents/hypaurora/code/nvim.sh" "kitty"; }
    Mod+X { spawn "nautilus"; }
    Mod+B { spawn "flatpak" "run" "com.brave.Browser" "--new-window"; }
    Mod+P { spawn "gnome-control-center"; }

    Mod+M { spawn "rofi" "-show" "drun"; }
    

    Mod+D { toggle-overview; }
    Mod+O { toggle-overview; }

    // Move focus with Mod + vim direction keys
    Mod+H { focus-column-left; }
    Mod+J { focus-workspace-down; }
    Mod+K { focus-workspace-up; }
    Mod+L { focus-column-right; }

    Mod+A { focus-column-left; }
    Mod+S { focus-column-right; }

    // Swap active with Mod Shift + vim direction keys
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+K { move-window-to-workspace-up; }
    Mod+Shift+J { move-window-to-workspace-down; }

    Mod+Shift+S { move-column-left; }
    Mod+Shift+G { move-column-right; }
    Mod+Shift+F { move-window-to-workspace-down; }
    Mod+Shift+D { move-window-to-workspace-up; }

    // Resize focus with Mod + CTRL + vim direction keys
    Mod+Z { switch-preset-column-width; }
    Mod+Alt+Z { switch-preset-window-height; }

    // Switch workspaces with Mod + [0-9]
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+Q { focus-workspace 6; }
    Mod+W { focus-workspace 7; }
    Mod+E { focus-workspace 8; }
    Mod+R { focus-workspace 9; }
    Mod+T { focus-workspace 10; }

    // Move active window to workspace with Mod + SHIFT + [0-9]
    Mod+Shift+1 { move-window-to-workspace 1; }
    Mod+Shift+2 { move-window-to-workspace 2; }
    Mod+Shift+3 { move-window-to-workspace 3; }
    Mod+Shift+4 { move-window-to-workspace 4; }
    Mod+Shift+5 { move-window-to-workspace 5; }
    Mod+Shift+Q { move-window-to-workspace 6; }
    Mod+Shift+W { move-window-to-workspace 7; }
    Mod+Shift+E { move-window-to-workspace 8; }
    Mod+Shift+R { move-window-to-workspace 9; }
    Mod+Shift+T { move-window-to-workspace 10; }

    // Scroll through existing workspaces with Mod + scroll
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp cooldown-ms=150 { focus-workspace-up; }
    Mod+Shift+WheelScrollDown cooldown-ms=150 { focus-column-right; }
    Mod+Shift+WheelScrollUp cooldown-ms=150 { focus-column-left; }

    // Window grouping (Note: Niri uses tabs instead of groups)
    Mod+Alt+A { toggle-column-tabbed-display; }
    Mod+Shift+A { consume-window-into-column; }
    Mod+Alt+G { expel-window-from-column; }

    // Move window with direction keys (Note: Niri doesn't have movewindoworgroup)
    Mod+Right { move-column-right; }
    Mod+Left { move-column-left; }
    Mod+Up { move-window-up; }
    Mod+Down { move-window-down; }

    // Change window states
    Mod+V { toggle-window-floating; }
    Mod+C { close-window; }
    Mod+F { fullscreen-window; }
    Mod+Y { center-column; }
    // Note: Niri doesn't have togglesplit equivalent

    // Keyboard System tweak keys
    XF86AudioRaiseVolume { spawn "sh" "-c" "~/.config/niri/script/volume --raise 5"; }
    XF86AudioLowerVolume { spawn "sh" "-c" "~/.config/niri/script/volume --lower 5"; }
    XF86AudioMute allow-when-locked=true { spawn "sh" "-c" "~/.config/niri/script/volume --toggle-mute"; }
    XF86MonBrightnessUp { spawn "sh" "-c" "~/.config/niri/script/brightness --raise 3"; }
    XF86MonBrightnessDown { spawn "sh" "-c" "~/.config/niri/script/brightness --lower 3"; }
    // XF86TouchpadToggle { spawn "sh" "-c" "~/.config/niri/script/touchpad"; }

    // Take screenshots
    Print { screenshot show-pointer=false; }
    Shift+Print { screenshot-screen show-pointer=false; }

    // Lock the screen
    Mod+Escape { spawn "sh" "-c" "swaylock -C ~/.config/niri/swaylock"; }
    Mod+space { spawn "niri" "msg" "action" "switch-layout" "next"; }
}

switch-events {
    lid-close { spawn "~/Documents/ypaurora/code/lock.sh" "systemctl suspend"; }
    lid-open { spawn "notify-send" "The laptop lid is open!"; }
}

layout {
    gaps 7
    center-focused-column "on-overflow"
    always-center-single-column
    default-column-display "normal"
    background-color "#003300"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    default-column-width { proportion 1.0; }

    preset-window-heights {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    focus-ring {
        // off
        width 2
        active-gradient from="#80c8ff" to="#bbddff" angle=45 relative-to="workspace-view"
        inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
        urgent-gradient from="#800" to="#a33" angle=45 relative-to="workspace-view"
    }

    border {
        off
        width 4
        active-gradient from="#ffbb66" to="#ffc880" angle=45 relative-to="workspace-view"
        inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view" in="srgb-linear"
        urgent-gradient from="#800" to="#a33" angle=45
    }

    shadow {
        on
        softness 0
        spread 0
        offset x=0 y=0
        draw-behind-window true
        color "#00000054"
        inactive-color "#00000029"
    }

    tab-indicator {
        // off
        // hide-when-single-tab
        place-within-column
        gap 5
        width 4
        length total-proportion=1.0
        position "right"
        gaps-between-tabs 2
        corner-radius 8
        active-color "red"
        inactive-color "gray"
        urgent-color "blue"
        // active-gradient from="#80c8ff" to="#bbddff" angle=45
        // inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
        // urgent-gradient from="#800" to="#a33" angle=45
    }

    insert-hint {
        // off
        color "#ffc87f80"
        // gradient from="#ffbb6680" to="#ffc88080" angle=45 relative-to="workspace-view"
    }

    struts {
        // left 64
        // right 64
        // top 64
        // bottom 64
    }
}

window-rule {
    geometry-corner-radius 8
    clip-to-geometry true
    draw-border-with-background false
}

window-rule {
    match app-id="org.gnome.Shotwell" title="Modify Tags"
    min-height 400
}

// Make fuzzel FLOAT.
layer-rule {
    match namespace="^rofi$"

    baba-is-float true
}

animations {
    slowdown 1.0
}

