spawn-at-startup "sh" "-c" "eww daemon && eww open vertical_bar"
spawn-at-startup "sh" "-c" "swaybg -i ~/.config/background --mode fill"
spawn-at-startup "~/Documents/hypaurora/code/idle.sh"

spawn-at-startup "sh" "-c" "/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh"
spawn-at-startup "/usr/libexec/polkit-mate-authentication-agent-1"
spawn-at-startup "sh" "-c" "eval \"$(ssh-agent -s)\""

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

prefer-no-csd

environment {
    QT_QPA_PLATFORM "wayland"
    GDMSESSION "GNOME"
    XDG_SESSION_DESKTOP "GNOME"
    XDG_CURRENT_DESKTOP "GNOME"

    SSH_AUTH_SOCK "/run/user/1000/keyring/ssh"

    ELECTRON_OZONE_PLATFORM_HINT "wayland"

    DISPLAY null
}

hotkey-overlay {
    // hide-not-bound
    skip-at-startup
}

cursor {
    xcursor-theme "MacOS-Tahoe-Cursor"
    xcursor-size 32

    hide-when-typing
    hide-after-inactive-ms 5000
}

overview {
    zoom 0.8
    backdrop-color "#232136"

    workspace-shadow {
        // off
        softness 40
        spread 10
        offset x=0 y=10
        color "#00000050"
    }
}

input {
    disable-power-key-handling
    // Allow focus-follows-mouse when it results in scrolling at most 10% of the screen.
    focus-follows-mouse max-scroll-amount="40%"
    
    mod-key "Super"
    mod-key-nested "Alt"

    keyboard {
        xkb {
            layout "us,ir"
            options "caps:escape"
        }
        track-layout "window"
    }

    touchpad {
        accel-profile "flat"
        accel-speed 1.8
        scroll-factor 1.0
        scroll-method "two-finger"
        natural-scroll
        tap
        dwt // disable when typing
        drag true // tap and drag
        drag-lock
    }

    mouse {
        accel-profile "flat"
        accel-speed 1.8
        scroll-factor 1.0
    }
}

output "eDP-1" {
    // off
    mode "1920x1080@59.93"
    scale 1.0
    transform "normal"
    position x=0 y=0
    variable-refresh-rate // on-demand=true
    focus-at-startup
    background-color "#191724"
    backdrop-color "#191724"
    // variable-refresh-rate
}

binds {
    Mod+Return { spawn "ghostty" "--gtk-titlebar=false"; }
    Mod+backslash { spawn "~/Documents/hypaurora/code/nvim.sh"; }
    Mod+X { spawn "nautilus"; }
    Mod+B { spawn "flatpak" "run" "com.brave.Browser" "--new-window"; }

    Mod+M { spawn "rofi" "-show" "drun"; }

    // Swaybg controls
    Mod+grave { spawn "~/Documents/hypaurora/code/stupid/rescue.sh"; }
    Mod+Alt+grave { spawn "~/Documents/hypaurora/code/stupid/comeback.sh"; }

    // Move focus with Mod + vim direction keys
    Mod+H { focus-column-left; }
    Mod+J { focus-workspace-down; }
    Mod+K { focus-workspace-up; }
    Mod+L { focus-column-right; }

    Mod+S { focus-column-left; }
    Mod+F { focus-workspace-down; }
    Mod+D { focus-workspace-up; }
    Mod+G { focus-column-right; }

    Mod+F1 { focus-window-up; }
    Mod+F2 { focus-window-down; }

    Mod+Alt+A { focus-column-left; }
    Mod+Alt+S { focus-column-right; }

    // Swap active with Mod Shift + vim direction keys
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+K { move-window-to-workspace-up; }
    Mod+Shift+J { move-window-to-workspace-down; }

    Mod+Shift+S { move-column-left; }
    Mod+Shift+G { move-column-right; }
    Mod+Shift+F { move-window-to-workspace-down; }
    Mod+Shift+D { move-window-to-workspace-up; }

    // Resize focus with Mod + CTRL + vim direction keys
    Mod+Z { switch-preset-column-width; }
    Mod+Alt+Z { switch-preset-window-height; }

    // Switch workspaces with Mod + [0-9]
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+Q { focus-workspace 6; }
    Mod+W { focus-workspace 7; }
    Mod+E { focus-workspace 8; }
    Mod+R { focus-workspace 9; }
    Mod+T { focus-workspace 10; }

    // Move active window to workspace with Mod + SHIFT + [0-9]
    Mod+Shift+1 { move-window-to-workspace 1; }
    Mod+Shift+2 { move-window-to-workspace 2; }
    Mod+Shift+3 { move-window-to-workspace 3; }
    Mod+Shift+4 { move-window-to-workspace 4; }
    Mod+Shift+5 { move-window-to-workspace 5; }
    Mod+Shift+Q { move-window-to-workspace 6; }
    Mod+Shift+W { move-window-to-workspace 7; }
    Mod+Shift+E { move-window-to-workspace 8; }
    Mod+Shift+R { move-window-to-workspace 9; }
    Mod+Shift+T { move-window-to-workspace 10; }

    // Scroll through existing workspaces with Mod + scroll
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp cooldown-ms=150 { focus-workspace-up; }

    Mod+Shift+WheelScrollDown cooldown-ms=150 { focus-column-right; }
    Mod+Shift+WheelScrollUp cooldown-ms=150 { focus-column-left; }

    // Window grouping (Note: Niri uses tabs instead of groups)
    Mod+A { toggle-column-tabbed-display; }
    Mod+Shift+A { consume-window-into-column; }
    Mod+Alt+G { expel-window-from-column; }

    // Move window with direction keys (Note: Niri doesn't have movewindoworgroup)
    Mod+Right { move-column-right; }
    Mod+Left { move-column-left; }
    Mod+Up { move-window-up; }
    Mod+Down { move-window-down; }

    // Change window states
    Mod+V { toggle-window-floating; }
    Mod+C { close-window; }
    Mod+P { fullscreen-window; }
    Mod+Y { center-column; }
    // Note: Niri doesn't have togglesplit equivalent

    // Keyboard System tweak keys
    XF86AudioRaiseVolume { spawn "sh" "-c" "~/Documents/hypaurora/code/osd/volume --raise 5"; }
    XF86AudioLowerVolume { spawn "sh" "-c" "~/Documents/hypaurora/code/osd/volume --lower 5"; }
    XF86AudioMute allow-when-locked=true { spawn "sh" "-c" "~/Documents/hypaurora/code/osd/volume --toggle-mute"; }
    XF86MonBrightnessUp { spawn "sh" "-c" "~/Documents/hypaurora/code/osd/brightness --raise 3"; }
    XF86MonBrightnessDown { spawn "sh" "-c" "~/Documents/hypaurora/code/osd/brightness --lower 3"; }
    XF86TouchpadToggle { spawn "sh" "-c" "$HOME/Documents/hypaurora/code/osd/touchpad"; }

    // Take screenshots
    Print { screenshot show-pointer=false; }
    Shift+Print { screenshot-screen show-pointer=false; }
    Ctrl+Print { spawn "sh" "-c" "flatpak run com.github.finefindus.eyedropper"; }

    // TODO:
    // Accessibility (Note: Niri doesn't have built-in zoom like pypr)
    // Mod+Alt+equal { spawn "pypr" "zoom" "++0.5"; }
    // Mod+Alt+minus { spawn "pypr" "zoom" "--0.5"; }
    // Mod+Alt+0 { spawn "pypr" "zoom"; }

    // Lock the screen
    Mod+Escape { spawn "sh" "-c" "$HOME/Documents/hypaurora/code/lock.sh"; }
    Mod+space { spawn "sh" "-c" "$HOME/Documents/hypaurora/code/osd/keyboard"; }
}

switch-events {
    lid-close { spawn "~/Documents/ypaurora/code/lock.sh" "systemctl suspend"; }
    lid-open { spawn "notify-send" "The laptop lid is open!"; }
}

layout {
    gaps 7
    center-focused-column "on-overflow"
    always-center-single-column
    default-column-display "normal"
    background-color "#191724"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    default-column-width { proportion 1.0; }

    preset-window-heights {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    focus-ring {
        // off
        width 2
        active-gradient from="#31748f" to="#c4a7e7" angle=45 relative-to="workspace-view"
        inactive-gradient from="#21202e" to="#524f67" angle=45 relative-to="workspace-view"
        urgent-gradient from="#eb6f92" to="#ebbcba" angle=45 relative-to="workspace-view"
    }

    border {
        off
        width 4
        active-gradient from="#31748f" to="#c4a7e7" angle=45 relative-to="workspace-view"
        inactive-gradient from="#21202e" to="#524f67" angle=45 relative-to="workspace-view"
        urgent-gradient from="#eb6f92" to="#ebbcba" angle=45 relative-to="workspace-view"
    }

    shadow {
        on
        softness 0
        spread 0
        offset x=0 y=0
        draw-behind-window true
        color "#00000054"
        inactive-color "#00000029"
    }

    tab-indicator {
        // off
        // hide-when-single-tab
        place-within-column
        gap 5
        width 4
        length total-proportion=1.0
        position "right"
        gaps-between-tabs 2
        corner-radius 8
        active-color "red"
        inactive-color "gray"
        urgent-color "blue"
        active-gradient from="#31748f" to="#c4a7e7" angle=45 relative-to="workspace-view"
        inactive-gradient from="#21202e" to="#524f67" angle=45 relative-to="workspace-view"
        urgent-gradient from="#eb6f92" to="#ebbcba" angle=45 relative-to="workspace-view"
    }

    insert-hint {
        // off
        color "#ffc87f80"
        // gradient from="#ffbb6680" to="#ffc88080" angle=45 relative-to="workspace-view"
    }

    struts {
        // left 64
        // right 64
        // top 64
        // bottom 64
    }
}


// Global Window Rule
window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
    draw-border-with-background false
}

// App Window Rules
window-rule { // float, secondary
    match app-id="com.github.finefindus.eyedropper"

    open-floating true
    open-focused false

    default-column-width { fixed 350; }
    default-window-height { fixed 500; }

    opacity 0.5

    min-width 250
    max-width 450
    min-height 500
    max-height 600
}
window-rule { // float, main, horizontal
    match app-id="org.gnome.Settings.GlobalShortcutsProvider"

    open-floating true

    default-column-width { fixed 850; }
    default-window-height { fixed 500; }
}
window-rule { // float, main, vertical
    match app-id="io.github.nozwock.Packet"

    open-floating true

    default-column-width { fixed 400; }
    default-window-height { fixed 650; }
}

// Window Specific Window Rule
window-rule {
    match app-id="org.gnome.Shotwell" title="Modify Tags"
    min-height 400
}

animations {
    slowdown 0.8
}

