#!/usr/bin/env bash

BATT_DIR="/sys/class/power_supply/BAT0"

if [ -d "$BATT_DIR" ]; then
    capacity=$(cat "$BATT_DIR/capacity")
    status=$(cat "$BATT_DIR/status")
    # Output JSON for eww to parse
    echo "{\"capacity\": $capacity, \"status\": \"$status\"}"
else
    echo '{"capacity": -1, "status": "Unknown"}'
fi
